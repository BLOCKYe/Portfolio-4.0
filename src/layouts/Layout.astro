---
import { ViewTransitions } from "astro:transitions";
import Loading from "../components/Loading.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Dominik ObÅ‚oza, Web Development & UI Design"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-4xl w-full mx-auto p-3 md:p-6 mt-3 md:mt-6 relative">
    <ViewTransitions />
    <Loading transition:persis />

    <slot />

    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&display=swap");

      ::-webkit-scrollbar {
        @apply bg-d-main w-2;
      }

      ::-webkit-scrollbar-track {
        @apply bg-d-second w-2;
      }

      ::-webkit-scrollbar-thumb {
        @apply bg-d-third w-2 rounded-full;
      }

      .fade-in {
        animation: fade-in-screen 0.75s linear forwards;
      }

      .fade-in-2 {
        animation: fade-in-logo 0.3s linear forwards;
      }

      @keyframes fade-in-screen {
        0% {
          opacity: 1;
        }

        80% {
          opacity: 1;
        }

        100% {
          overflow: hidden;
          opacity: 0;
          display: none;
          visibility: hidden;
        }
      }

      @keyframes fade-in-logo {
        0% {
          opacity: 0.25;
        }

        60% {
          opacity: 0.75;
        }

        80% {
          opacity: 0.75;
        }

        100% {
          overflow: hidden;
          opacity: 0;
          display: none;
          visibility: hidden;
        }
      }

      * {
        @apply box-border;
      }

      html {
        font-size: 16px;
        font-family: "Geist Mono", serif;
        @apply bg-d-main text-l-main;
      }

      h1 {
        @apply text-2xl leading-8 tracking-tight;
      }

      h2 {
        @apply text-lg leading-8 tracking-tight;
      }

      p {
        @apply leading-relaxed tracking-wide;
      }

      li {
        @apply text-sm text-l-second;
      }

      .btn {
        @apply border-[1px] rounded border-d-third text-xs py-2 px-3 hover:bg-d-second hover:text-c-main transition-all flex gap-3 items-center;
      }

      .label {
        @apply rounded text-xs p-1 px-2 text-muted border-[1px] border-d-third bg-d-second;
      }

      .icon {
        @apply box-content p-2 transition-all rounded-full cursor-pointer bg-d-second hover:text-c-main;
      }

      a {
        @apply hover:text-l-main hover:underline;
      }
    </style>
  </body>
</html>
